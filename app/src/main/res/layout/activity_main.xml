<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:text="enter the first number:"
        android:textColor="#0000FF"
        android:textSize="20sp">

    </TextView>

    <EditText
        android:id="@+id/txtNum1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:autofillHints="first number"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:text="@string/second_num"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:autofillHints="second number"
        android:layout_marginEnd="10dp"
        android:inputType="number"
        android:imeOptions="actionDone">
    </EditText>


    <Button
        android:id="@+id/BtnAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"

        android:text="@string/average_is"
        android:textColor="@color/black"
        android:shadowColor="@color/black"/>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="250dp"
       app:cardCornerRadius="25dp"
       android:layout_margin="15dp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="the average is...."
           android:textSize="25dp"
           android:textColor="@color/black"/>

       <EditText
           android:id="@+id/txtAvg"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:layout_marginTop="30dp"
           android:layout_gravity="center"/>

   </androidx.cardview.widget.CardView>



</LinearLayout>